package com.mypackage.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;


import com.mypackage.model.Admin;

public class AdminDao {
	
	private Connection con;
	
	public AdminDao(Connection con) {
		super();
		this.con = con;
	}
	
	public boolean saveAdmin(Admin admin) {
		boolean flag = false;

		try {
			String query = "insert into admin(name, email, password, phone) values(?, ?, ?, ?)";
			PreparedStatement psm= this.con.prepareStatement(query);
			psm.setString(1, admin.getName());
			psm.setString(2, admin.getEmail());
			psm.setString(3, admin.getPassword());
			psm.setString(3, admin.getPhone());
			
			psm.executeUpdate();
			flag=true;
			
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return flag;
	}
	
	
	public Admin getAdminByEmailPassword(String email,String password) {
		
		Admin admin=null;
		
		try {
			
			String query="select * from admin where email=? and password=?";
			PreparedStatement psmt=this.con.prepareStatement(query);
			psmt.setString(1, email);
			psmt.setString(2, password);
			
			ResultSet rs=psmt.executeQuery();
			while(rs.next()){
				
				admin=new Admin();
				admin.setId(rs.getInt("id"));
				admin.setName(rs.getString("name"));
				admin.setEmail(rs.getString("email"));
				admin.setPassword(rs.getString("password"));
				admin.setPhone(rs.getString("phone"));
			}
			
	  }catch(Exception e) {
			e.printStackTrace();
		}
		
	return admin;
	  }
	
	
	
	
	
	
	
}